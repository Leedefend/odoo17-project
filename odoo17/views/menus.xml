<odoo>
    <data>
        <!-- 动作定义 -->
        <record id="action_project_project" model="ir.actions.act_window">
            <field name="name" t-translation="on">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_project_plan" model="ir.actions.act_window">
            <field name="name" t-translation="on">Plans</field>
            <field name="res_model">project.plan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_project_cost" model="ir.actions.act_window">
            <field name="name" t-translation="on">Costs</field>
            <field name="res_model">project.cost</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_project_quality" model="ir.actions.act_window">
            <field name="name" t-translation="on">Quality Checks</field>
            <field name="res_model">project.quality</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_project_safety" model="ir.actions.act_window">
            <field name="name" t-translation="on">Safety Checks</field>
            <field name="res_model">project.safety</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_project_risk" model="ir.actions.act_window">
            <field name="name" t-translation="on">Risks</field>
            <field name="res_model">project.risk</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- 顶级菜单项 -->
        <menuitem id="menu_infrastructure_management" name="Infrastructure Management" t-translation="on"/>

        <!-- 子菜单项 -->
        <menuitem id="menu_project_management" name="Projects" parent="menu_infrastructure_management" action="action_project_project" t-translation="on"/>
        <menuitem id="menu_plan_management" name="Plans" parent="menu_infrastructure_management" action="action_project_plan" t-translation="on"/>
        <menuitem id="menu_cost_management" name="Costs" parent="menu_infrastructure_management" action="action_project_cost" t-translation="on"/>
        <menuitem id="menu_quality_management" name="Quality Checks" parent="menu_infrastructure_management" action="action_project_quality" t-translation="on"/>
        <menuitem id="menu_safety_management" name="Safety Checks" parent="menu_infrastructure_management" action="action_project_safety" t-translation="on"/>
        <menuitem id="menu_risk_management" name="Risks" parent="menu_infrastructure_management" action="action_project_risk" t-translation="on"/>
    </data>
</odoo>
